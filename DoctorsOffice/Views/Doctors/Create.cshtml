@{
  Layout = "_Layout";
}
@model DoctorsOffice.Models.Doctor

<h4>Add a new doctor:</h4>

@using (Html.BeginForm())
{
  <h4>Enter Doctor's Name:</h4>
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty)

  <input type="submit" value="Add Doctor" class="btn btn-success btn-sm" />
}
