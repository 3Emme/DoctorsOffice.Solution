@{
  Layout = "_Layout";
}
@model DoctorsOffice.Models.Specialty

<h2>Edit</h2>

<h4>Edit this Specialty: @Html.DisplayFor(model => model.SpecialtyName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.SpecialtyId)

  @Html.LabelFor(model => model.SpecialtyName)
  @Html.EditorFor(model => model.SpecialtyName)

  <input type="submit" value="Save" class="btn btn-success btn-sm" />
}
<br>
<p>@Html.ActionLink("Cancel", "Details", null, new {id = Model.SpecialtyId}, new {@class="btn btn-primary btn-sm"})</p>