@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Specialty

<h2>Add a doctor</h2>

<h4>Add a doctor to this specialty: @Html.DisplayFor(model => model.SpecialtyName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.SpecialtyId)

  @Html.Label("Select Doctor")
  @Html.DropDownList("DoctorId")

  <input type="submit" value="Save" class="btn btn-success btn-sm" />
}
<br>
<p>@Html.ActionLink("Specialty List", "Index", null, null, new {@class="btn btn-primary btn-sm"})</p>